<style>
  #clustrmaps-container {
    transform: scale(0.5);
    transform-origin: top right;
    float: right; /* Right align on larger screens */
    margin-right: 10px;
  }
  @media screen and (max-width: 30px) {
    /* Adjust the breakpoint as needed */
    #clustrmaps-container {
      transform: scale(0.35); /* Smaller on mobile */
      margin-right: 5px;
    }
  }
</style>
{% if site.footer_fixed %}
  <footer class="fixed-bottom" role="contentinfo">
    <div class="container mt-0">
      <div id="clustrmaps-container">
        <script type="text/javascript" id="clstr_globe" src="//clustrmaps.com/globe.js?d=1VjAIakiHNVi6jf0F8r4A3FStvQqKoQbwhyR5pRH7yg"></script>
      </div>
      &copy; Copyright {{ site.time | date: '%Y' }}
      {{ site.first_name }}
      {{ site.middle_name }}
      {{ site.last_name }}. {{ site.footer_text }}
      {% if site.impressum_path %}
        <a href="{{ site.url }}{{ site.baseurl }}{{ site.impressum_path }}">Impressum</a>.
      {% endif %}
      {% if site.last_updated %}
        Last updated: {{ 'now' | date: '%B %d, %Y' }}.
      {% endif %}
    </div>
  </footer>
{% else %}
  <footer class="sticky-bottom mt-5" role="contentinfo">
    {% if site.newsletter.enabled %}
      {% include scripts/newsletter.liquid %}
    {% endif %}

    <div class="container">
      &copy; Copyright {{ site.time | date: '%Y' }}
      {{ site.first_name }}
      {{ site.middle_name }}
      {{ site.last_name }}. {{ site.footer_text }}
      {% if site.impressum_path %}
        <a href="{{ site.url }}{{ site.baseurl }}{{ site.impressum_path }}">Impressum</a>.
      {% endif %}
      {% if site.last_updated %}
        Last updated: {{ 'now' | date: '%B %d, %Y' }}.
      {% endif %}
    </div>
  </footer>
{% endif %}
